<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="guinovart.joaquim.lafosca_beach.BeachActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statetTV"
        android:paddingTop="10px"
        android:paddingLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flagTV"
        android:paddingTop="10px"
        android:paddingLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happinessTV"
        android:paddingTop="10px"
        android:paddingLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dirtinessTV"
        android:paddingTop="10px"
        android:paddingLeft="10px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kidsTV"
        android:paddingTop="10px"
        android:paddingLeft="10px"/>
    <Button
        android:id="@+id/clean_button"
        android:layout_width="72dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="clean"
        android:onClick="CloseCleanNivea"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="72dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="close"
        android:onClick="CloseCleanNivea"/>
    <Button
        android:id="@+id/nivea_button"
        android:layout_width="72dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="NIVEA"
        android:onClick="CloseCleanNivea"/>



</LinearLayout>
